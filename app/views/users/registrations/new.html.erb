<div class="relative min-h-screen flex items-center justify-center">
  <!-- Background image with overlay -->
  <div class="absolute inset-0 w-full h-full">
    <img src="<%= s3_image_url('photo.jpeg') %>" alt="Background" class="w-full h-full object-cover">
    <div class="absolute inset-0"></div>
  </div>
  
  <div class="relative z-10 w-full max-w-md px-6 py-12 lg:px-8">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden p-8">
      <div class="sm:mx-auto sm:w-full sm:max-w-sm text-center">
        <div class="text-5xl font-bold mb-4 text-black">TZU</div>
        <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Create your account</h2>
      </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= f.label :password, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</span>
          <% end %>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "new-password", required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3" %>
        </div>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 px-3" %>
        </div>
      </div>

      <div>
        <%= f.label :role, "Account Type", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <div class="flex gap-4">
            <div class="flex items-center">
              <%= f.radio_button :role, "user", checked: true, class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-600" %>
              <%= f.label :role_user, "Regular User", class: "ml-2 block text-sm font-medium leading-6 text-gray-900" %>
            </div>
            <div class="flex items-center">
              <%= f.radio_button :role, "business_owner", class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-600" %>
              <%= f.label :role_business_owner, "Business Owner", class: "ml-2 block text-sm font-medium leading-6 text-gray-900" %>
            </div>
          </div>
          <p class="mt-1 text-xs text-gray-500">Business owners will be able to create and manage a company profile.</p>
        </div>
      </div>

      <div>
        <%= f.submit "Sign up", class: "flex w-full justify-center rounded-md bg-blue-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
      </div>
    <% end %>

    <div class="mt-10 text-center text-sm text-gray-500">
      Already have an account?
      <%= link_to "Log in", new_session_path(resource_name), class: "font-semibold leading-6 text-blue-600 hover:text-blue-500" %>
      </div>
    </div>
  </div>
</div>
