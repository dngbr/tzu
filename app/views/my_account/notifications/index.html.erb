<div class="flex min-h-screen bg-gray-50">
  <!-- Sidebar Navigation -->
  <%= render 'shared/sidebar' %>
  
  <!-- Main Content Area -->
  <div class="flex-1 p-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-800"><%= t('notifications.title') %></h1>
      <p class="text-gray-600 mt-2"><%= t('notifications.subtitle') %></p>
    </div>
    
    <% if notice %>
      <div class="bg-green-100 border-l-4 border-green-500 text-green-700 px-4 py-3 rounded shadow-sm mb-6">
        <%= notice %>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="bg-red-100 border-l-4 border-red-500 text-red-700 px-4 py-3 rounded shadow-sm mb-6">
        <%= alert %>
      </div>
    <% end %>
    
    <!-- Notifications List -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-800"><%= t('notifications.all_notifications') %></h2>
      </div>
      
      <% if @notifications.any? %>
        <div class="divide-y divide-gray-200">
          <% @notifications.each do |notification| %>
            <%= render partial: "my_account/notifications/notification", locals: { notification: notification } %>
          <% end %>
        </div>
        
        <div class="p-6 border-t border-gray-200">
          <%= paginate @notifications %>
        </div>
      <% else %>
        <div class="p-12 text-center text-gray-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
          <p class="text-lg"><%= t('notifications.no_notifications') %></p>
          <p class="mt-2"><%= t('notifications.check_back_later') %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
