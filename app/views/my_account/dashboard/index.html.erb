<div class="flex min-h-screen bg-gray-50">
  <!-- Sidebar Navigation -->
  <%= render 'shared/sidebar' %>
  
  <!-- Main Content Area -->
  <div class="flex-1 p-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-800"><%= t('dashboard.title', default: 'Dashboard') %></h1>
      <p class="text-gray-600 mt-2"><%= t('dashboard.subtitle', default: 'Overview of your business performance') %></p>
    </div>
    
    <% if notice %>
      <div class="bg-green-100 border-l-4 border-green-500 text-green-700 px-4 py-3 rounded shadow-sm mb-6">
        <%= notice %>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="bg-red-100 border-l-4 border-red-500 text-red-700 px-4 py-3 rounded shadow-sm mb-6">
        <%= alert %>
      </div>
    <% end %>
    
    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Reviews -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-blue-100 mr-4">
            <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-600">Total Reviews</p>
            <p class="text-2xl font-bold text-gray-900">128</p>
          </div>
        </div>
        <div class="mt-4">
          <div class="flex items-center">
            <span class="text-green-500 text-sm font-medium flex items-center">
              <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
              </svg>
              12.5%
            </span>
            <span class="text-gray-500 text-sm ml-2">vs last month</span>
          </div>
        </div>
      </div>
      
      <!-- Average Rating -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-yellow-100 mr-4">
            <svg class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-600">Average Rating</p>
            <p class="text-2xl font-bold text-gray-900">4.7</p>
          </div>
        </div>
        <div class="mt-4">
          <div class="flex items-center">
            <span class="text-green-500 text-sm font-medium flex items-center">
              <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
              </svg>
              0.3
            </span>
            <span class="text-gray-500 text-sm ml-2">vs last month</span>
          </div>
        </div>
      </div>
      
      <!-- Sentiment Score -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-green-100 mr-4">
            <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-600">Sentiment Score</p>
            <p class="text-2xl font-bold text-gray-900">82%</p>
          </div>
        </div>
        <div class="mt-4">
          <div class="flex items-center">
            <span class="text-red-500 text-sm font-medium flex items-center">
              <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
              </svg>
              2.1%
            </span>
            <span class="text-gray-500 text-sm ml-2">vs last month</span>
          </div>
        </div>
      </div>
      
      <!-- Response Rate -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-purple-100 mr-4">
            <svg class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-600">Response Rate</p>
            <p class="text-2xl font-bold text-gray-900">95%</p>
          </div>
        </div>
        <div class="mt-4">
          <div class="flex items-center">
            <span class="text-green-500 text-sm font-medium flex items-center">
              <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
              </svg>
              5.0%
            </span>
            <span class="text-gray-500 text-sm ml-2">vs last month</span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <!-- Reviews Over Time Chart -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Reviews Over Time</h3>
        
        <!-- Mock Chart -->
        <div class="h-64 relative">
          <!-- Chart Background -->
          <div class="absolute inset-0 flex items-end">
            <% [25, 40, 30, 50, 60, 45, 75, 70, 85, 60, 75, 90].each_with_index do |value, index| %>
              <div class="flex-1 mx-1">
                <div class="bg-blue-500 rounded-t-sm" style="height: <%= value %>%;"></div>
              </div>
            <% end %>
          </div>
          
          <!-- Chart Grid Lines -->
          <div class="absolute inset-0 flex flex-col justify-between pointer-events-none">
            <% 5.times do |i| %>
              <div class="border-b border-gray-200 relative h-0">
                <span class="absolute -top-3 -left-6 text-xs text-gray-500"><%= 100 - i * 20 %></span>
              </div>
            <% end %>
            <div class="relative h-0">
              <span class="absolute -top-3 -left-6 text-xs text-gray-500">0</span>
            </div>
          </div>
        </div>
        
        <!-- X-Axis Labels -->
        <div class="flex justify-between mt-2">
          <% ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'].each do |month| %>
            <div class="text-xs text-gray-500"><%= month %></div>
          <% end %>
        </div>
      </div>
      
      <!-- Rating Distribution Chart -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Rating Distribution</h3>
        
        <!-- Mock Horizontal Bar Chart -->
        <div class="space-y-4">
          <% [
            { stars: 5, percentage: 75, count: 96 },
            { stars: 4, percentage: 15, count: 19 },
            { stars: 3, percentage: 5, count: 6 },
            { stars: 2, percentage: 3, count: 4 },
            { stars: 1, percentage: 2, count: 3 }
          ].each do |rating| %>
            <div>
              <div class="flex items-center mb-1">
                <div class="w-12 text-sm font-medium text-gray-700"><%= rating[:stars] %> stars</div>
                <div class="flex-1 h-4 mx-2 bg-gray-200 rounded-full overflow-hidden">
                  <div class="h-full bg-yellow-400 rounded-full" style="width: <%= rating[:percentage] %>%;"></div>
                </div>
                <div class="w-12 text-sm text-gray-500 text-right"><%= rating[:count] %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Recent Activity and Insights -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Recent Reviews -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200 lg:col-span-2">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-semibold text-gray-800">Recent Reviews</h3>
          <a href="<%= my_account_my_reviews_path %>" class="text-sm text-blue-600 hover:text-blue-800">View all</a>
        </div>
        
        <!-- Mock Reviews List -->
        <div class="space-y-4">
          <% [
            { name: "John D.", rating: 5, date: "2 days ago", content: "Excellent service! The staff was very professional and attentive to my needs." },
            { name: "Sarah M.", rating: 4, date: "4 days ago", content: "Great experience overall. Would recommend to friends and family." },
            { name: "Michael T.", rating: 5, date: "1 week ago", content: "Top notch quality and service. Will definitely be coming back." }
          ].each do |review| %>
            <div class="border-b border-gray-200 pb-4 last:border-0 last:pb-0">
              <div class="flex justify-between items-start">
                <div>
                  <div class="font-medium text-gray-800"><%= review[:name] %></div>
                  <div class="flex items-center mt-1">
                    <% review[:rating].times do %>
                      <svg class="h-4 w-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                        <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                      </svg>
                    <% end %>
                    <% (5 - review[:rating]).times do %>
                      <svg class="h-4 w-4 text-gray-300 fill-current" viewBox="0 0 20 20">
                        <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                      </svg>
                    <% end %>
                    <span class="ml-2 text-sm text-gray-500"><%= review[:date] %></span>
                  </div>
                </div>
                <div class="flex space-x-2">
                  <button class="text-gray-400 hover:text-blue-500">
                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                  </button>
                </div>
              </div>
              <p class="mt-2 text-gray-600 text-sm"><%= review[:content] %></p>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Key Insights -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Key Insights</h3>
        
        <!-- Mock Insights -->
        <div class="space-y-4">
          <div class="p-4 bg-blue-50 rounded-lg border border-blue-100">
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-0.5">
                <svg class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-blue-800">Customers frequently mention your staff's friendliness</p>
              </div>
            </div>
          </div>
          
          <div class="p-4 bg-green-50 rounded-lg border border-green-100">
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-0.5">
                <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-green-800">Your response time has improved by 15% this month</p>
              </div>
            </div>
          </div>
          
          <div class="p-4 bg-yellow-50 rounded-lg border border-yellow-100">
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-0.5">
                <svg class="h-5 w-5 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-yellow-800">Some customers have mentioned issues with wait times</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- AI Analysis Button -->
        <div class="mt-6">
          <button class="w-full flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
            Run AI Analysis
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
