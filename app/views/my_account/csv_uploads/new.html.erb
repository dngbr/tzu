<%= render 'shared/navbar' %>

<div class="max-w-4xl mx-auto my-10 px-6">
  <h1 class="text-3xl font-bold mb-6">Upload CSV File for Analysis</h1>
  
  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with(model: @csv_upload, local: true, class: "space-y-6") do |f| %>
      <% if @csv_upload.errors.any? %>
        <div class="bg-red-50 text-red-700 p-4 rounded mb-6">
          <h2 class="text-lg font-medium"><%= pluralize(@csv_upload.errors.count, "error") %> prohibited this upload from being saved:</h2>
          <ul class="list-disc pl-5 mt-2">
            <% @csv_upload.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Upload Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent", placeholder: "E.g., Customer Reviews Q1 2025" %>
        <p class="text-xs text-gray-500 mt-1">Give your upload a descriptive name to help you identify it later.</p>
      </div>

      <div>
        <%= f.label :file, "CSV File", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.file_field :file, class: "w-full text-gray-700 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent", accept: ".csv" %>
        <p class="text-xs text-gray-500 mt-1">Upload a CSV file containing customer reviews. The file should have a header row and at least one column with review text.</p>
      </div>

      <div class="pt-4">
        <%= f.submit "Upload and Analyze", class: "w-full bg-black text-white py-2 px-4 rounded-md hover:bg-gray-800 transition" %>
      </div>
    <% end %>
  </div>
  
  <div class="mt-6 text-center">
    <%= link_to "Back to Uploads", my_uploads_path, class: "text-gray-700 hover:text-black underline" %>
  </div>
</div>

<%= render 'shared/footer' %>
