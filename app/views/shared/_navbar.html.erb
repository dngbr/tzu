<!-- Main Navigation -->
<header class="relative py-4 overflow-hidden" style="z-index: 50;">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img src="<%= s3_image_url('photo.jpeg') %>" alt="Background" class="w-full h-full object-cover">
    <div class="absolute inset-0"></div>
  </div>
  
  <div class="flex justify-between items-center max-w-7xl mx-auto px-8 relative z-10">
    <a href="<%= root_path %>" class="font-bold text-2xl text-white hover:text-gray-200 transition tracking-tight">TZU</a>
    <div class="flex items-center space-x-6">
      <% if user_signed_in? %>
        <a href="<%= my_account_root_path %>" class="text-white hover:text-gray-200 font-medium transition"><%= t('navbar.my_account') %></a>
        <%= link_to t('navbar.log_out'), destroy_user_session_path, data: { turbo_method: :delete }, class: "ml-4 px-4 py-2 bg-white text-gray-800 hover:bg-gray-100 font-medium rounded-lg transition shadow-sm" %>
      <% else %>
        <a href="<%= new_user_session_path %>" class="text-white hover:text-gray-200 font-medium transition"><%= t('navbar.log_in') %></a>
        <a href="<%= new_user_registration_path %>" class="bg-white/20 backdrop-blur-sm text-white px-5 py-2 rounded-full hover:bg-white/30 transition"><%= t('navbar.sign_up') %></a>
      <% end %>
    </div>
  </div>
</header>
